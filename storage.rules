rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /comprobantes_pago/{fileName} {
      allow write: if request.auth != null;
      allow read; 
    }
    match /incident_attachments/{allPaths=**} {
     allow write: if request.auth != null;
     allow read;
   }
   // AÃ‘ADIDO: Regla para los recibos de pago
   match /payment_receipts/{allPaths=**} {
     allow write: if request.auth != null;
     allow read;
   }
  }
}