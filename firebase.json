{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "codebase": "default",
      "runtime": "nodejs20",
      "source": "firebase-functions",
 "predeploy": [
 "npm --prefix \"$RESOURCE_DIR\" run build"
 ],
 "ignore": [
 "**/.eslintrc.json"
 ]
    }
  ]
}