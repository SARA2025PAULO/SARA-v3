rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función auxiliar para verificar si el usuario tiene el rol de 'admin'.
    // Esta versión es más segura: comprueba que el campo 'role' exista y sea 'admin'.
    function isUserAdmin() {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return request.auth != null && 'role' in userData && userData.role == 'admin';
    }

    // REGLA DEFINITIVA PARA INVITACIONES
    // Solo los administradores pueden leer la lista de invitaciones o crear/modificar una.
    match /invitations/{invitationId} {
      allow read, write: if isUserAdmin();
    }

    // REGLA PARA EL CORREO
    // Cualquiera puede crear un documento en la colección 'mail' para disparar un correo.
    match /mail/{mailId} {
      allow create: if true;
      allow read, update, delete: if false; 
    }

    // REGLA GENERAL PARA OTRAS COLECCIONES
    // Para cualquier otra colección, se requiere que el usuario esté autenticado.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
